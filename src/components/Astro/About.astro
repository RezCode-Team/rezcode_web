<section id="about" class="py-20 px-6 relative z-10">
  <div class="max-w-7xl mx-auto">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Motto -->
      <div
        data-aos="fade-up"
        data-aos-delay="0"
        class="p-8 rounded-3xl bg-brand-dark border border-brand-primary/20 hover:border-brand-primary/50 transition-all group relative overflow-hidden"
      >
        <div
          class="absolute top-0 right-0 w-32 h-32 bg-brand-primary/10 blur-[50px] rounded-full group-hover:bg-brand-primary/20 transition-all"
        >
        </div>
        <h3
          class="text-brand-secondary text-sm font-bold uppercase tracking-widest mb-4"
        >
          Our Motto
        </h3>
        <p class="text-2xl md:text-3xl font-black text-white leading-tight">
          "Beyond Code. <br />
          <span class="text-brand-primary">Beyond Limits.</span>"
        </p>
      </div>

      <!-- Vision -->
      <div
        data-aos="fade-up"
        data-aos-delay="100"
        class="p-8 rounded-3xl bg-brand-dark border border-brand-primary/20 hover:border-brand-primary/50 transition-all group relative overflow-hidden"
      >
        <div
          class="absolute top-0 right-0 w-32 h-32 bg-brand-secondary/10 blur-[50px] rounded-full group-hover:bg-brand-secondary/20 transition-all"
        >
        </div>
        <h3
          class="text-brand-secondary text-sm font-bold uppercase tracking-widest mb-4"
        >
          Our Vision
        </h3>
        <p class="text-lg text-brand-light/80 leading-relaxed">
          To architect the digital nervous system of tomorrow's enterprises,
          becoming the global standard for high-performance aesthetic
          infrastructure.
        </p>
      </div>

      <!-- Mission -->
      <div
        data-aos="fade-up"
        data-aos-delay="200"
        class="p-8 rounded-3xl bg-brand-dark border border-brand-primary/20 hover:border-brand-primary/50 transition-all group relative overflow-hidden"
      >
        <div
          class="absolute top-0 right-0 w-32 h-32 bg-white/5 blur-[50px] rounded-full group-hover:bg-white/10 transition-all"
        >
        </div>
        <h3
          class="text-brand-secondary text-sm font-bold uppercase tracking-widest mb-4"
        >
          Our Mission
        </h3>
        <ul class="space-y-3">
          <li class="flex items-start gap-3 text-brand-light/80">
            <span class="w-1.5 h-1.5 rounded-full bg-brand-primary mt-2"></span>
            <span>Forge innovative solutions</span>
          </li>
          <li class="flex items-start gap-3 text-brand-light/80">
            <span class="w-1.5 h-1.5 rounded-full bg-brand-secondary mt-2"
            ></span>
            <span>Ensure compromising quality</span>
          </li>
          <li class="flex items-start gap-3 text-brand-light/80">
            <span class="w-1.5 h-1.5 rounded-full bg-white mt-2"></span>
            <span>Empower global growth</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
