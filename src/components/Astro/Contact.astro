---
import {
  MessageCircle,
  Mail,
  ArrowRight,
  Instagram,
  Video,
  Youtube,
  Facebook,
  Linkedin,
  Github,
} from "lucide-react";
---

<section
  id="contact"
  class="pt-32 pb-10 px-6 bg-gradient-to-b from-brand-dark to-[#050810]"
>
  <div class="max-w-6xl mx-auto">
    <!-- Main Contact Card -->
    <div
      data-aos="fade-up"
      class="bg-brand-primary/5 border border-brand-primary/20 rounded-[3rem] p-8 md:p-16 text-center relative overflow-hidden mb-24"
    >
      <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full bg-brand-primary/5 blur-[80px] rounded-full -z-10"
      >
      </div>

      <h2
        class="text-5xl md:text-7xl font-black text-white mb-8 tracking-tighter"
      >
        Let's Talk Business?
      </h2>
      <p class="text-brand-secondary text-xl mb-12 max-w-2xl mx-auto">
        Have a visionary idea? We have the engineering muscle to build it. Reach
        out directly.
      </p>

      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <a
          href="https://wa.me/6281234567890"
          target="_blank"
          class="px-8 py-4 bg-[#25D366] text-white font-bold rounded-2xl hover:brightness-110 transition-all flex items-center gap-3 shadow-lg shadow-[#25D366]/20"
        >
          <MessageCircle className="w-6 h-6" />
          WhatsApp Business
        </a>
        <a
          href="mailto:hello@rezcode.com"
          class="px-8 py-4 bg-brand-light text-brand-dark font-bold rounded-2xl hover:bg-white transition-all flex items-center gap-3"
        >
          <Mail className="w-5 h-5" />
          hello@rezcode.com
        </a>
      </div>
    </div>

    <!-- Footer Grid -->
    <div
      class="grid md:grid-cols-4 gap-12 border-t border-brand-primary/10 pt-16"
    >
      <div class="col-span-2">
        <div class="text-2xl font-black text-white mb-6">
          Rez<span class="text-brand-primary">Code</span>
        </div>
        <p class="text-brand-secondary max-w-sm mb-8">
          Forging digital realities with precision engineering and futuristic
          design. Jakarta, Indonesia.
        </p>
        <div class="text-sm text-brand-secondary/50">
          &copy; 2026 RezCode Agency. All rights reserved.
        </div>
      </div>

      <div>
        <h4 class="text-white font-bold mb-6">Sitemap</h4>
        <ul class="space-y-4 text-brand-secondary">
          <li>
            <a href="#" class="hover:text-brand-primary transition">Home</a>
          </li>
          <li>
            <a href="#about" class="hover:text-brand-primary transition"
              >About</a>
          </li>
          <li>
            <a href="#services" class="hover:text-brand-primary transition"
              >Services</a>
          </li>
          <li>
            <a href="#projects" class="hover:text-brand-primary transition"
              >Showcase</a>
          </li>
        </ul>
      </div>

      <div>
        <h4 class="text-white font-bold mb-6">Connect</h4>
        <div class="grid grid-cols-4 gap-4">
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-brand-dark border border-brand-primary/20 flex items-center justify-center text-brand-secondary hover:bg-brand-primary hover:text-white transition-all"
            ><Instagram className="w-5 h-5" /></a
          >
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-brand-dark border border-brand-primary/20 flex items-center justify-center text-brand-secondary hover:bg-brand-primary hover:text-white transition-all"
            ><Video className="w-5 h-5" /></a
          >
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-brand-dark border border-brand-primary/20 flex items-center justify-center text-brand-secondary hover:bg-brand-primary hover:text-white transition-all"
            ><Youtube className="w-5 h-5" /></a
          >
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-brand-dark border border-brand-primary/20 flex items-center justify-center text-brand-secondary hover:bg-brand-primary hover:text-white transition-all"
            ><Facebook className="w-5 h-5" /></a
          >
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-brand-dark border border-brand-primary/20 flex items-center justify-center text-brand-secondary hover:bg-brand-primary hover:text-white transition-all"
            ><Linkedin className="w-5 h-5" /></a
          >
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-brand-dark border border-brand-primary/20 flex items-center justify-center text-brand-secondary hover:bg-brand-primary hover:text-white transition-all"
            ><Github className="w-5 h-5" /></a
          >
        </div>
      </div>
    </div>
  </div>
</section>
